@model IEnumerable<WebApplication1.Models.Product>

<h2>Product List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3">No products available.</td>
            </tr>
        }
    </tbody>
</table>
